<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#303030" >

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         >

        <SurfaceView
            android:id="@+id/camera"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/left"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/imageLeft"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    />

                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <Button
	                    android:id="@+id/noButton"
	                    android:layout_width="30dp"
	                    android:layout_height="30dp"
	                    android:layout_alignParentBottom="true"
	                    android:layout_centerHorizontal="true"
	                    android:background="@drawable/no"
	                    android:visibility="invisible" />
                </RelativeLayout>
                
                
                <ImageView
                    android:id="@+id/imageMove"
                    android:layout_width="10dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shadow_left"
                    android:layout_gravity="right" />
               
            </FrameLayout>

            <FrameLayout
                android:id="@+id/right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ImageView
                    android:id="@+id/imageRight"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
 					android:alpha="30"
                    android:background="@drawable/shadow_right" />

                <ImageView
                    android:id="@+id/imageFloat"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    
                    />
                <ImageView
                    android:id="@+id/imageXiangji"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@drawable/xiangji" />
                <Button
			        android:id="@+id/rightYesButton"
			        android:layout_width="70dp"
			        android:layout_height="70dp"
			        android:layout_gravity="right"
			        android:background="@drawable/yes"
			        android:visibility="gone"/>
                <Button
			        android:id="@+id/rightNoButton"
			        android:layout_width="70dp"
			        android:layout_height="70dp"
			        android:layout_gravity="right"
			        android:background="@drawable/no"
			        android:visibility="gone"/>
                <TextView
		            android:id="@+id/text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="bottom|center_horizontal"
			        android:text="@string/nexttext"
			        android:layout_marginBottom="20dp"
			        android:textColor="@android:color/darker_gray"/>
            </FrameLayout>
        </LinearLayout>
         <ImageView
                    android:id="@+id/takephotoButtonBG"
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                     android:background="@drawable/siderbarbg" 
                      android:alpha="30"/>
        <Button
	        android:id="@+id/takephotoButton"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:drawableLeft="@drawable/photobutton"
	        android:padding="5dp"
	         android:background="@android:color/transparent"
	        />
        <com.hackathon.view.FocusBoxView
            android:id="@+id/focusBoxView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        
    </FrameLayout>
	 
</LinearLayout>